<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shymacbook.memorygame.gameCards"
    tools:showIn="@layout/activity_game_cards">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showName"
        android:layout_alignBottom="@+id/showName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="P 1: "
        android:textSize="24dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="score"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/showName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView"
        android:text="Name..."
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="0dp" />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="36dp"
        android:columnCount="2"
        android:rowCount="4"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="90dp">

        <ImageView
            android:id="@+id/card_r1c1"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="blastoise"
            android:cropToPadding="true"
            android:onClick="picShow"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/card_r1c2"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="charmander"
            android:onClick="picShow"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/card_r2c1"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="squirtle"
            android:onClick="picShow"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/card_r2c2"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="blastoise"
            android:onClick="picShow"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/card_r3c1"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="charmander"
            android:onClick="picShow"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/card_r31c2"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="squirtle"
            android:onClick="picShow"
            android:padding="5dp" />
    </GridLayout>

</android.widget.RelativeLayout>
